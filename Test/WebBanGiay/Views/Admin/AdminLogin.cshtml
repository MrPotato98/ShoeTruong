
@{
    ViewBag.Title = "AdminLogin";
    Layout = null;
}
<html>
<head>
    <title>Sign up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <link href="~/Content/Template/css/bootstrap.css" rel="stylesheet" type="text/css" media="all">
    <!-- Custom Theme files -->
    <link href="~/Content/Template/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--js-->
    <script src="~/Scripts/js/jquery-2.1.1.min.js"></script>
    <!--icons-css-->
    <link href="~/Content/Template/css/font-awesome.css" rel="stylesheet">
    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Carrois+Gothic' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Work+Sans:400,500,600' rel='stylesheet' type='text/css'>
    <!--static chart-->
</head>
<body>
    <h4 style=" color:red; text-align:center;"> @ViewBag.Thongbao</h4>

    <div class="signup-page-main">
        <div class="signup-main">
            <div class="signup-head">
                <h1>Sign Up</h1>
            </div>
            <div class="signup-block">
                @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <form>
                        @Html.TextBox("Hoten", null, new { type = "text", placeholder = "Họ và tên", required = @ViewData["LoiTenTK"] })
                        @Html.TextBox("username", null, new { type = "text", placeholder = "Tên tài khoản", required = @ViewData["LoiTenTK"] })
                        @Html.Password("password", null, new { type = "password", placeholder = "Password", required = "LoiPass" })
                        <div class="forgot-top-grids">
                            <div class="forgot-grid">
                                <ul>
                                    <li>
                                        <input type="checkbox" id="brand1" value="">
                                        <label for="brand1"><span></span>I agree to the terms</label>
                                    </li>
                                </ul>
                            </div>

                            <div class="clearfix"> </div>
                        </div>
                        <input type="submit" name="Sign In" value="Sign up">
                    </form>
                    <div class="sign-down">
                        <h4>Already have an account? <a href="/Admin/Login"> Login here.</a></h4>
                        <h5><a href="/Admin/Index">Go Back to Home</a></h5>

                    </div>
                }
            </div>
        </div>
    </div>
    <!--scrolling js-->
    <script src="~/Scripts/js/jquery.nicescroll.js"></script>
    <script src="~/Scripts/js/scripts.js"></script>
    <!--//scrolling js-->
    <script src="~/Scripts/js/bootstrap.js"></script>
    <!-- mother grid end here-->
</body>
</html>