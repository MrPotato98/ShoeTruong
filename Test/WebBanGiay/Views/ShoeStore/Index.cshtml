</section>
<section class="owl-carousel section_gap">
    <div class="single-product-slider">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="section-title">
                        <h1>Sản phẩm mới</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <a href="@Url.Action("Details", "ShoeStore", new {id=x.MaGIAY})"><img class="img-fluid" src="~/image/@Url.Content(@x.Anhbia)" style="height:200px;width:100%" alt=""></a>
                            <div class="product-details">
                                <h6>
                                    @x.TenGIAY
                                </h6>
                                <div class="price">
                                    <h6>@x.Giaban VND</h6>
                                </div>
                                <div class="prd-bottom">
                                    <a href="@Url.Action("Details", "ShoeStore", new {id=x.MaGIAY})" class="social-info">
                                        <span class="lnr lnr-move"></span>
                                        <p class="hover-text">view more</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <nav class="blog-pagination justify-content-center d-flex">
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, @class = "page-link" }))
                </ul>
            </nav>
        </div>
    </div>
    <div class="single-product-slider">

    </div>
</section>
