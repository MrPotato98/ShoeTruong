<section class="lattest-product-area pb-40 category-list">
    <div class="row">
        @foreach (var i in Model as IEnumerable<WebBanGiay.Models.GIAY>)
        {
            <div class="col-lg-4 col-md-6">
                <div class="single-product">
                    <a href="@Url.Action("Details", "ShoeStore", new { id = i.MaGIAY })"><img class="img-fluid" src="~/image/@i.Anhbia" alt=""></a>
                    <div class="product-details">
                        <h6>
                            @i.TenGIAY
                        </h6>
                        <div class="price">
                            <h6>@i.Giaban</h6>
                        </div>
                        <div class="prd-bottom">
                            <a href="@Url.Action("Details", "ShoeStore", new { id = i.MaGIAY })" class="social-info">
                                <span class="lnr lnr-move"></span>
                                <p class="hover-text">Xem chi tiết</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>